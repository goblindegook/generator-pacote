{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "repository": "<%= githubUsername %>/<%= name %>",
  "scripts": {
    "build": "cd src; babel *.js -d ../lib",
    "docs": "esdoc -c esdoc.json",
    "prepublish": "npm run build",
    "pretest": "eslint src/**/*.js",
    "test": "nyc ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "require": [
      "babel-core/register"
    ]
  },
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= email %>",
    "url": "<%= authorUrl %>"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2016": "^6.11.3",
    "coveralls": "^2.11.6",
    "esdoc": "^0.4.3",
    "eslint": "^3.1.1",
    "nyc": "^7.1.0-candidate3"
  }
}
